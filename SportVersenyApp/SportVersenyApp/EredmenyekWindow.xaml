<Window x:Class="SportVersenyApp.EredmenyekWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eredmények" Height="400" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgEredmenyek" Grid.Row="0" AutoGenerateColumns="False" 
                 CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Helyezés" Binding="{Binding Helyezes}" Width="80"/>
                <DataGridTextColumn Header="Csapat név" Binding="{Binding Csapat.Nev}" Width="*"/>
                <DataGridTextColumn Header="Pontok" Binding="{Binding Csapat.Pontok}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Bezárás" Click="Bezaras_Click"/>
        </StackPanel>
    </Grid>
</Window>