<Window x:Class="SportVersenyApp.CsapatokWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Csapatok Kezelése" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Csapat neve:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="txtCsapatNev" Width="200" Margin="0,0,10,0"/>
            <Button Content="Hozzáadás" Click="Hozzaadas_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgCsapatok" Grid.Row="1" AutoGenerateColumns="False" 
                 CanUserAddRows="False" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Csapat név" Binding="{Binding Nev}" Width="*"/>
                <DataGridTextColumn Header="Pontok" Binding="{Binding Pontok}" Width="100"/>
                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Törlés" Click="Torles_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Bezárás" Click="Bezaras_Click" Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>